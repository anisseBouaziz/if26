<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android1:layout_above="@+id/buttonAddContact"
        android1:fitsSystemWindows="false" >
    </ListView>

    <Button
        android1:id="@+id/buttonFriendRequest"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/listView1"
        android1:text="Friend requests" />

    <Button
        android1:id="@+id/buttonAddContact"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:onClick="addContactClick"
        android1:text="New contact" />

    <Button
        android1:id="@+id/buttonDeleteContact"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/listView1"
        android1:layout_toLeftOf="@+id/buttonFriendRequest"
        android1:layout_toRightOf="@+id/buttonAddContact"
        android1:text="Delete contact" />

</RelativeLayout>